<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="my.com.fredachew.firstaidpenang.doAndDont_firstpage">

    <ImageView
        android:id="@+id/doanddont"
        android:layout_width="230dp"
        android:layout_height="217dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="83dp"
        android:src="@drawable/doanddont"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="82dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/doanddontText"
        android:textAlignment="center"
        android:textSize="35px"
        android:layout_marginTop="18dp"
        android:id="@+id/dnddescription"
        android:layout_below="@+id/doanddont"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btndoanddont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dnddescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Next"/>


</RelativeLayout>
